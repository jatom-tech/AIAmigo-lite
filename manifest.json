{
  "manifest_version": 3,
  "name": "AIAmigo Lite",
  "version": "1.0",
  "description": "A privacy-aware Chrome extension that flags risky prompts in real time.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "action": {
    "default_title": "AIAmigo Lite is active"
  }
}